<h2 class="ui center aligned icon header">
  <i class="circular sticky address card outline inverted  icon"></i>
  Add new unit
</h2>

<%= form_for :unit do |f|  %>

  <div class="ui segment inverted">
    <div class="ui form inverted">
      <div class="avatar">
        <% if @unit.image.attached? %>
          <%=image_tag(@unit.image, class: 'avatar')%>
        <% else %>
          <%= image_tag('unit-default.png', class: 'avatar') %>
        <% end %>

      </div>
      <div class="field">
        <%=f.label :image %>
        <%=f.file_field :image %>
      </div>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'Name' %>
      </div>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_field :description, placeholder: 'Description' %>
      </div>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: 'Full description' %>
      </div>
      <%= f.submit "Add unit", class: 'ui button'%>
    </div>
  </div>
<% end %>